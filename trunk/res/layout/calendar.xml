<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/background">
	<TextView android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal" android:paddingTop="20dp"
		android:paddingBottom="10dp" android:cursorVisible="true"
		android:layout_width="fill_parent" android:id="@+id/calendarTitle"
		android:text="Calendar" android:paddingLeft="15dp" android:shadowDx="-1.0"
		android:shadowDy="-1.0" android:shadowRadius="1.0" android:textColor="#FFFFFF"
		android:shadowColor="#09586d" android:textSize="36sp"></TextView>

	
<ListView android:id="@+id/calendarList" android:layout_width="fill_parent" android:layout_gravity="fill_vertical" android:layout_weight="1" android:layout_height="0dp"></ListView><LinearLayout android:id="@+id/LinearLayout01" android:layout_width="fill_parent" android:gravity="fill_horizontal" android:layout_height="40dp" android:background="#33333333">
		<elements.IntentButton android:text="Settings" android:textColor="#ffffffff" android:layout_weight="1" android:layout_height="fill_parent" android:background="#00ffffff" android:layout_width="0dp" android:id="@+id/settingsNavButton"></elements.IntentButton>
		<elements.IntentButton android:text="Calendar" android:textColor="#ffffffff" android:layout_weight="1" android:layout_height="fill_parent" android:background="#00ffffff" android:layout_width="0dp" android:id="@+id/calendarNavButton"></elements.IntentButton>
		<elements.IntentButton android:text="Test" android:textColor="#ffffffff" android:layout_weight="1" android:layout_height="fill_parent" android:background="#00ffffff" android:layout_width="0dp" android:id="@+id/testNavButton"></elements.IntentButton>
		<elements.IntentButton android:text="Tips" android:textColor="#ffffffff" android:layout_weight="1" android:layout_height="fill_parent" android:background="#00ffffff" android:layout_width="0dp" android:id="@+id/tipsNavButton"></elements.IntentButton>
	</LinearLayout>


</LinearLayout>
