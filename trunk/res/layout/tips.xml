<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/background_ray">





	<LinearLayout android:id="@+id/LinearLayout02"
		android:orientation="vertical" android:layout_gravity="fill_vertical"
		android:layout_weight="1" android:layout_width="fill_parent"
		android:layout_height="0dp">
		<TextView android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal" android:paddingTop="5dp"
			android:paddingBottom="10dp" android:cursorVisible="true"
			android:layout_width="fill_parent" android:id="@+id/settingsTitle"
			android:text="Tips &amp; tricks" android:paddingLeft="15dp" android:shadowDx="-1.0"
			android:shadowDy="-1.0" android:shadowRadius="0.3" android:textColor="#FFFFFF"
			android:shadowColor="#09586d" android:textSize="42sp"></TextView>
		<TextView android:layout_height="wrap_content" android:id="@+id/textViewTips"
			android:text="1. Make sure your phone is plugged in throughout the night."
			android:textColor="#FFFFFF" android:textSize="12sp"
			android:layout_width="fill_parent" android:width="200dp"
			android:padding="15dp"></TextView>
		<TextView android:layout_height="wrap_content" android:id="@+id/textViewTips"
			android:textColor="#FFFFFF" android:textSize="12sp"
			android:layout_width="fill_parent" android:width="200dp"
			android:padding="15dp"
			android:text="2. Be sure to have your phone at the right volume before you go to sleep."></TextView>
		<TextView android:layout_height="wrap_content" android:id="@+id/textViewTips"
			android:textColor="#FFFFFF" android:textSize="12sp"
			android:layout_width="fill_parent" android:width="200dp"
			android:padding="15dp"
			android:text="3. Do not put the phone under your pillow. Place it at the top corner of your bed."></TextView>
	</LinearLayout>
	
<LinearLayout android:id="@+id/LinearLayout01"
		android:layout_width="wrap_content" android:layout_height="wrap_content">
		<elements.IntentButton android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/backButton"
			android:text="back"></elements.IntentButton>
	</LinearLayout>

</LinearLayout>
